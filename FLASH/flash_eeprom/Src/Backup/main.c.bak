//要写入到STM32 FLASH的字符串数组
uint8_t TEXT_Buffer[]={"STM32 FLASH TEST"};
#define TEXT_LENTH sizeof(TEXT_Buffer)	 		  	//数组长度	
#define SIZE TEXT_LENTH/4+((TEXT_LENTH%4)?1:0)
uint8_t datatemp[SIZE];
#define  UPGRADE_START_ADDRESS     0x8040000  //设置FLASH 保存地址(必须为偶数，且所在扇区,要大于本代码所占用到的扇区.
										                          //否则,写操作的时候,可能会导致擦除整个扇区,从而引起部分程序丢失.引起死机.

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */
	uint8_t key=0;
	uint16_t i=0;
	uint8_t datatemp[TEXT_LENTH];
  /* USER CODE END 1 */
  

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART1_UART_Init();
  /* USER CODE BEGIN 2 */

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
		key=KEY_Scan(0);
		if(key==KEY0_PRES)//KEY0按下,写入flash
		{
       STMFLASH_EraseSec(6,6);
	     STMFLASH_Write(UPGRADE_START_ADDRESS,TEXT_Buffer,TEXT_LENTH);
			 printf("write \r\n");
		}
		if(key==KEY1_PRES)//KEY1按下,按照字读取 读取字符串并显示
		{
       STMFLASH_Read(UPGRADE_START_ADDRESS,(uint32_t*)datatemp,SIZE);
			 printf("read by word \r\n");
	     HAL_UART_Transmit(&huart1 , datatemp, TEXT_LENTH, 0xFFFF);		 
			 printf("%s\r\n",datatemp);//插入换行
		} 
		if(key==KEY2_PRES)//KEY2按下,按照字节读取 读取读取字符串并显示
		{
			 for(i=0;i<TEXT_LENTH;i++)
        {
					 datatemp[i]=STMFLASH_ReadByte(UPGRADE_START_ADDRESS+i);			    
				}
       printf("read by byte \r\n");
	     HAL_UART_Transmit(&huart1 , datatemp, TEXT_LENTH, 0xFFFF);		 
			 printf("%s\r\n",datatemp);//插入换行
		} 
		
		i++;
		HAL_Delay(10);
		if(i==20)
		{
			HAL_GPIO_TogglePin(LED0_GPIO_Port,LED0_Pin);//提示系统正在运行	
			i=0;
		}		  
  }
  /* USER CODE END 3 */
}

